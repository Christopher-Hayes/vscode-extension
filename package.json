{
  "name": "playcanvas",
  "displayName": "PlayCanvas",
  "description": "Official PlayCanvas extension from the team",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "playcanvas.helloWorld",
        "title": "Hello World"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "PlayCanvasExplorer",
          "name": "PlayCanvas"
        }
      ]
    },
    "properties": {
      "playcanvas.bearerToken": {
        "type": "string",
        "default": "",
        "description": "The Bearer token to authenticate with the API."
      },
      "playcanvas.username": {
        "type": "string",
        "default": "",
        "description": "Username on PlayCanvas platform."
      }      

    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "node-fetch": "^3.3.1"
  }
}
