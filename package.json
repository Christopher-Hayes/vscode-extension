{
  "name": "playcanvas",
  "displayName": "PlayCanvas",
  "description": "Official PlayCanvas extension from the team",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onFileSystem:playcanvas"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "title": "PlayCanvas",
      "properties": {
        "playcanvas.accessToken": {
          "type": "string",
          "default": "",
          "description": "Access Token for PlayCanvas"
        },
        "playcanvas.username": {
          "type": "string",
          "default": "",
          "description": "Username for PlayCanvas"
        }
      }
    },
    "commands": [
      {
        "command": "playcanvas.refresh",
        "title": "Playcanvas: Refresh",
        "icon": "$(refresh)"
      }, 
      {
        "command": "playcanvas.collapseAll",
        "title": "Playcanvas: Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "playcanvas.switchBranch",
        "title": "Switch branch..."
      },      
      {
        "command": "playcanvas.rename",
        "title": "Rename..."
      },
      {
        "command": "playcanvas.delete",
        "title": "Delete"
      },
      {
        "command": "playcanvas.newFile",
        "title": "New File..."
      },
      {
        "command": "playcanvas.newFolder",
        "title": "New Folder..."
      },
      {
        "command": "playcanvas.findInFolder",
        "title": "Find In Folder..."
      }, 
      {
        "command": "playcanvas.copy",
        "title": "Copy"
      },
      {
        "command": "playcanvas.cut",
        "title": "Cut"
      },   
      {
        "command": "playcanvas.paste",
        "title": "Paste"
      },   
      {
        "command": "playcanvas.refreshFile",
        "title": "Pull Latest"
      },   
      {
        "command": "playcanvas.openFile",
        "title": "View"
      }                  
    ],
    "menus": {
      "view/title": [
        {
          "command": "playcanvas.refresh",
          "when": "view == PlayCanvasExplorer",
          "group": "navigation"
        },
        {
          "command": "playcanvas.collapseAll",
          "when": "view == PlayCanvasExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "playcanvas.switchBranch",
          "when": "view == PlayCanvasExplorer && viewItem == project",
          "group": "1_project"
        },
        {
          "command": "playcanvas.newFile",
          "when": "view == PlayCanvasExplorer && (viewItem == folder || viewItem == project)",
          "group": "2_folder"
        },
        {
          "command": "playcanvas.newFolder",
          "when": "view == PlayCanvasExplorer && (viewItem == folder || viewItem == project)",
          "group": "2_folder"
        },
        {
          "command": "playcanvas.findInFolder",
          "when": "view == PlayCanvasExplorer && (viewItem == folder || viewItem == project)",
          "group": "3_search"
        }, 
        {
          "command": "playcanvas.refreshFile",
          "when": "view == PlayCanvasExplorer && viewItem == file",
          "group": "4_misc"
        },
        {
          "command": "playcanvas.openFile",
          "when": "view == PlayCanvasExplorer && viewItem == file",
          "group": "4_misc"
        },        
        {
          "command": "playcanvas.copy",
          "when": "view == PlayCanvasExplorer && (viewItem == file || viewItem == folder)",
          "group": "5_clipboard"
        },
        {
          "command": "playcanvas.cut",
          "when": "view == PlayCanvasExplorer && (viewItem == file || viewItem == folder)",
          "group": "5_clipboard"
        }, {
          "command": "playcanvas.paste",
          "when": "view == PlayCanvasExplorer && (viewItem == folder || viewItem == project)",
          "group": "5_clipboard"
        },       
        {
            "command": "playcanvas.rename",
            "when": "view == PlayCanvasExplorer && (viewItem == file || viewItem == folder)",
            "group": "6_modification"
        },
        {
          "command": "playcanvas.delete",
          "when": "view == PlayCanvasExplorer && (viewItem == file || viewItem == folder)",
          "group": "6_modification"
        }       
                
      ]
    },    
    "views": {
      "explorer": [
        {
          "id": "PlayCanvasExplorer",
          "name": "PlayCanvas"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "node-fetch": "^2.1.2"
  }
}
