{
  "name": "playcanvas",
  "displayName": "PlayCanvas",
  "description": "Official PlayCanvas extension from the team",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "capabilities": {
    "virtualWorkspaces": false
  },  
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onFileSystem:playcanvas"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "title": "PlayCanvas",
      "properties": {
        "playcanvas.accessToken": {
          "type": "string",
          "default": "",
          "description": "Access Token for PlayCanvas"
        },
        "playcanvas.username": {
          "type": "string",
          "default": "",
          "description": "Username for PlayCanvas"
        }
      }
    },
    "commands": [
      {
        "command": "playcanvas.addProject",
        "title": "Playcanvas: Add Project",
        "icon": "$(add)"
      },
      {
        "command": "playcanvas.switchBranch",
        "title": "Playcanvas: Switch branch..."
      },
      {
        "command": "playcanvas.refreshFile",
        "title": "Pull Latest"
      }                  
    ],
    "menus": {
      "explorer/context": [
        {
            "command": "playcanvas.addProject",
            "when": "resourceScheme == playcanvas"
        },
        {
          "command": "playcanvas.switchBranch",
          "when": "resourceScheme == playcanvas"
        }        
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "node-fetch": "^2.1.2"
  }
}
