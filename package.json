{
  "name": "playcanvas",
  "displayName": "PlayCanvas",
  "description": "Official PlayCanvas extension from the team",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "playcanvas.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },    
      {
        "command": "playcanvas.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "playcanvas.rename",
        "title": "Rename..."
      },
      {
        "command": "playcanvas.delete",
        "title": "Delete"
      },
      {
        "command": "playcanvas.copy",
        "title": "Copy"
      },
      {
        "command": "playcanvas.paste",
        "title": "Paste"
      }                  
    ],
    "menus": {
      "view/title": [
        {
          "command": "playcanvas.refreshEntry",
          "when": "view == PlayCanvasExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "playcanvas.copy",
          "when": "view == PlayCanvasExplorer && viewItem == file",
          "group": "1_clipboard"
        },
        {
          "command": "playcanvas.paste",
          "when": "view == PlayCanvasExplorer && viewItem == file",
          "group": "1_clipboard"
        },       
        {
            "command": "playcanvas.rename",
            "when": "view == PlayCanvasExplorer && viewItem == file",
            "group": "2_modification"
        },
        {
          "command": "playcanvas.delete",
          "when": "view == PlayCanvasExplorer && viewItem == file",
          "group": "2_modification"
        }
                
      ]
    },    
    "views": {
      "explorer": [
        {
          "id": "PlayCanvasExplorer",
          "name": "PlayCanvas"
        }
      ]
    },
    "properties": {
      "playcanvas.bearerToken": {
        "type": "string",
        "default": "",
        "description": "The Bearer token to authenticate with the API."
      },
      "playcanvas.username": {
        "type": "string",
        "default": "",
        "description": "Username on PlayCanvas platform."
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "node-fetch": "^2.1.2"
  }
}
